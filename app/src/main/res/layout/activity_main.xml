<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#398C6262">


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                app:shapeAppearanceOverlay="@style/CornerStyle"
                app:srcCompat="@drawable/shoe" />

            <View
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:background="@drawable/background_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </View>

            <EditText
                android:id="@+id/editText"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Search"
                android:textColorHint="#4E2C15"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                android:drawableLeft="@drawable/search"
                android:drawableTint="#4E2C15"


               ></EditText>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#875838"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_baseline_add_shopping_cart_24"
                app:iconGravity="end"
                app:iconTint="@color/white" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="245dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:fontFamily="@font/textstyle"
                android:text="Protect your energy step"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:text="with our latest dress shoes collection"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:text="Buy now"
                android:textColor="@color/white"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_baseline_play_arrow_24"
                app:iconGravity="textEnd"
                app:iconTint="@color/white"
                app:strokeColor="@color/white"

                />
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="353dp"
            android:layout_height="123dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:layout_width="66dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#4CAF50"
                android:text="Featured"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="NIKE Sports Sneakers for Men"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:text="@string/yuz_dollar"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="90dp"
                android:text="$90"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="80dp"
                app:icon="@drawable/ic_baseline_favorite_24"
                app:iconTint="#9E9898" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="235dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sneakers1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Featured Collection"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="353dp"
            android:layout_height="123dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button5"
                android:layout_width="66dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#00BCD4"
                android:text="New"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="NIKE Sports Sneakers for Men"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:text="@string/yuz_dollar"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="90dp"
                android:text="$90"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button6"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="80dp"
                app:icon="@drawable/ic_baseline_favorite_24"
                app:iconTint="#9E9898" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sneakers2"
                android:scaleType="centerCrop"
                android:layout_marginLeft="235dp"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:text="New Collection"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cardView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:icon="@drawable/ic_baseline_home_24"
                app:iconTint="#585C60"
                app:iconGravity="textEnd"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button8"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                app:icon="@drawable/ic_baseline_favorite_border_24"
                app:iconTint="#585C60"
                app:iconGravity="textEnd"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button9"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="150dp"
                app:icon="@drawable/ic_baseline_table_rows_24"
                app:iconTint="#585C60"
                app:iconGravity="textEnd"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button10"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:layout_marginLeft="230dp"
                app:icon="@drawable/ic_baseline_wallpaper_24"
                app:iconTint="#585C60"
                app:iconGravity="textEnd"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/button11"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="310dp"
                app:icon="@drawable/ic_baseline_person_outline_24"
                app:iconTint="#585C60"
                app:iconGravity="textEnd"/>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>